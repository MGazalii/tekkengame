    "import random\n",
    "class Heroes:\n",
    "    \n",
    "    def __init__(self, name):\n",
    "        self.Name = name\n",
    "        self.Healthpoint = 100\n",
    "    \n",
    "    def attack(self, hero, power, turn):     \n",
    "    \n",
    "        if power < 10:\n",
    "            hit_ratio = 0.9\n",
    "        elif 10 <= power < 15:\n",
    "            hit_ratio = 0.7\n",
    "        elif 15 <= power < 25:\n",
    "            hit_ratio = 0.5\n",
    "        else:\n",
    "            hit_ratio = 0.3\n",
    "\n",
    "            \n",
    "        if random.random() <= hit_ratio:\n",
    "            print(\" \"*60, \" \"*60)          \n",
    "            print(45*\" \", self.Name, hero.Name, \"'e saldırdı!\")\n",
    "            print(\" \"*60, \" \"*60)\n",
    "            self.hit(hero, power)\n",
    "        else:\n",
    "            print(\" \"*45, \" \"*45)\n",
    "            print(\" \"*45, self.Name, \"ıskaladı!\")\n",
    "            print(\" \"*60, \" \"*60)\n",
    "            self.miss(power)\n",
    "        \n",
    "        self.print_info(hero, turn)\n",
    "    \n",
    "    def defen(self, hero):\n",
    "        defense_point = random.random()\n",
    "        if defense_point > hit_ratio:\n",
    "            print(self.Name, \"savundu! \")\n",
    "        self.print_info(hero, turn)\n",
    "    \n",
    "    def hit(self, hero, power):\n",
    "        hero.Healthpoint -= power\n",
    "        \n",
    "    def miss(self, power):\n",
    "        self.Healthpoint -= power//2\n",
    "        \n",
    "    def print_info(self, hero, turn):\n",
    "        if turn == 1: \n",
    "            print(self.Name, \" \"*(125-len(self.Name) - len(hero.Name)), hero.Name)\n",
    "            print(self.Healthpoint//3 * \"|\", \" \"*(125-self.Healthpoint//3 - hero.Healthpoint//3), hero.Healthpoint//3 * \"|\")\n",
    "            print(self.Healthpoint, \" \"*120, hero.Healthpoint)\n",
    "        elif turn == 2:\n",
    "            print(hero.Name, \" \"*(125-len(self.Name) - len(hero.Name)), self.Name,)\n",
    "            print( hero.Healthpoint//3 * \"|\", \" \"*(125-self.Healthpoint//3 - hero.Healthpoint//3), self.Healthpoint//3 * \"|\",)\n",
    "            print(hero.Healthpoint, \" \"*120, self.Healthpoint)"
